<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="phonebooktest">

	<resultMap id="resultMapPersonVo" type="PersonVo">
		<result column="person_id" property="personId" />
		<result column="name" property="name" />
		<result column="hp" property="hp" />
		<result column="company" property="company" />
	</resultMap>

	<!-- 삭제 --> <!-- CDATA로 감싼 부분은 쿼리문으로 중간에 <>표시가 나와도 태그가 아님을 알려줌 -->
	<delete id="delete" parameterType="int">
		<![CDATA[  
		delete from person
		where person_id = #{personId}
		]]>
	</delete>

	<!-- 저장 -->
	<insert id="insert" parameterType="PersonVo">
		<![CDATA[
		insert into person
		values(null, #{name}, #{hp}, #{company})
		]]>
	</insert>
	
	<!-- 전체 리스트 -->
	<select id="selectList" resultMap="resultMapPersonVo">
		<![CDATA[
		select	person_id
				,name
        		,hp
        		,company
		from person
		]]>
	</select>

	<!-- 한개 가져오기 -->
	<select id="selectOne" parameterType="int" resultMap="resultMapPersonVo">
		<![CDATA[
		select  person_id
				,name
				,hp
        		,company
		from person
		where person_id = #{no}
		]]>
	</select>

	<!-- 수정 -->
	<update id="update" parameterType="PersonVo">
		<![CDATA[
		update person
		set name = #{name} 
			,hp = #{hp}
    		,company = #{company}
		where person_id = #{personId}
		]]>
	</update>

</mapper>
